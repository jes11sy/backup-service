# Backup Service Configuration

# Server
PORT=5009
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/devcrm

# S3 Storage
S3_BUCKET_NAME=devcrm-backups
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key_here
S3_SECRET_ACCESS_KEY=your_secret_key_here
S3_ENDPOINT=  # Optional: for Minio or custom S3-compatible storage

# Daily Backups
BACKUP_DAILY_ENABLED=true
BACKUP_DAILY_CRON=0 3 * * *           # 3:00 AM каждый день
BACKUP_DAILY_RETENTION=7              # Хранить 7 дней

# Weekly Backups
BACKUP_WEEKLY_ENABLED=true
BACKUP_WEEKLY_CRON=0 2 * * 0          # 2:00 AM каждое воскресенье
BACKUP_WEEKLY_RETENTION=30            # Хранить 30 дней

# Monthly Backups
BACKUP_MONTHLY_ENABLED=true
BACKUP_MONTHLY_CRON=0 1 1 * *         # 1:00 AM 1-го числа каждого месяца
BACKUP_MONTHLY_RETENTION=365          # Хранить 365 дней

# Swagger API Docs (отключить в production)
SWAGGER_ENABLED=false

